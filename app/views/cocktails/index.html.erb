<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(https://imgs.heart.co.uk/images/67577?crop=16_9&width=660&relax=1&signature=8y_ZcWNsvL3l6agExysmAZswWRY=);">
  <div class="banner-content">
    <h1>Cocktails</h1>
    <p>Great cocktails for great</p>
    <%= link_to "Add a cocktail", new_cocktail_path, class: "btn btn-primary btn-lg" %>
  </div>
</div>


<div class="row">
    <div class="card" style="width: 18rem;">
      <% @cocktails.each do |cocktail| %>
      <div class="col-4">
      <img class="card-img-top" src="https://source.unsplash.com/random" alt="Card image cap">
      <div class="card-body">
        <h5 class="card-title"><%= cocktail.name %></h5>
        <a href="#" class="btn btn-primary">Go somewhere</a>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
